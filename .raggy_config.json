{
  "docs_directory": "./docs",
  "chroma_db_path": "./.raggy_db",
  "embedding_model": "all-MiniLM-L6-v2",
  "chunk_size": 800,
  "chunk_overlap": 100,
  "collection_name": "raggy_docs",
  "supported_extensions": [
    ".md",
    ".txt",
    ".pdf",
    ".docx"
  ],
  "exclude_patterns": [
    "*.tmp",
    "*.log",
    ".git/*",
    "node_modules/*",
    "__pycache__/*"
  ],
  "hybrid_search": true,
  "keyword_weight": 0.3,
  "max_results": 10
}